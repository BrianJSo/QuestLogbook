<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".QuestActivity">

    <TextView
        android:id="@+id/viewQuestTitleTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/quest_title"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/viewQuestTypeTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/quest_type"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/viewQuestDescTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/quest_desc"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/viewQuestNotesTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:gravity="start|top"
        android:hint="@string/quest_notes"
        android:importantForAutofill="no"
        android:inputType="textMultiLine" />

    <Button
        android:id="@+id/updateNotesBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/quest_update_notes" />

</LinearLayout>